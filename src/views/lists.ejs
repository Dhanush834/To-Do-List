<%- include('header') -%>

<div class="box" id="heading">
    <h1>
        <%=listTitle%>
    </h1>
</div>


<div class="box">

    <% newitems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="Check" value="<%= item._id %>" onchange="this.form.submit()" class="checkbox-round">
                <p>
                    <%= item.name %>
                </p>    
            </div>
            <input type="hidden" name="ListName" value="<%= listTitle %>" >
        </form>
    <% }) %>

            <form action="/" method="post" class="item">
                <input type="text" name="item" placeholder="New Task" autocomplete="off">
                <button type="submit" name="list" value="<%=listTitle%>">+</button>
            </form>

</div>



<%- include('footer') -%>